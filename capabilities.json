{
    "dataRoles": [
      {
        "name": "category",
        "kind": "Grouping",
        "displayName": "Category"
      },
      {
        "name": "xAxis",
        "kind": "GroupingOrMeasure",
        "displayName": "X Axis"
      },
      {
        "name": "yAxis",
        "kind": "GroupingOrMeasure",
        "displayName": "Y Axis"
      },
      {
        "name": "zAxis",
        "kind": "GroupingOrMeasure",
        "displayName": "Z Axis (for future use)"
      },
      {
        "name": "color",
        "kind": "Measure",
        "displayName": "Color by Value"
      },
      {
        "name": "size",
        "kind": "Measure",
        "displayName": "Point Size"
      },
      {
        "name": "tooltip",
        "kind": "Measure",
        "displayName": "Tooltip Info"
      }
    ],
    "dataViewMappings": [
    {
      "categorical": {
        "categories": {
          "for": { "in": "category" }
        },
        "values": {
          "select": [
            { "for": { "in": "xAxis" } },
            { "for": { "in": "yAxis" } },
            { "for": { "in": "zAxis" } },
            { "for": { "in": "color" } },
            { "for": { "in": "size" } },
            { "for": { "in": "tooltip" } }
          ]
        }
      }
    }
  ],
    "objects": {
      "dataPoint": {
        "displayName": "Data Points",
        "properties": {
          "defaultColor": {
            "displayName": "Default Color",
            "type": { "fill": { "solid": { "color": true } } }
          },
          "showAllDataPoints": {
            "displayName": "Show All Data Points",
            "type": { "bool": true }
          }
        }
      },
      "axis": {
        "displayName": "Axis Settings",
        "properties": {
          "xAxisTitle": {
            "displayName": "X Axis Title",
            "type": { "text": true }
          },
          "yAxisTitle": {
            "displayName": "Y Axis Title",
            "type": { "text": true }
          },
          "xAxisScale": {
            "displayName": "X Axis Scale",
            "type": {
              "enumeration": [
                { "value": "linear", "displayName": "Linear" },
                { "value": "log", "displayName": "Logarithmic" }
              ]
            }
          },
          "yAxisScale": {
            "displayName": "Y Axis Scale",
            "type": {
              "enumeration": [
                { "value": "linear", "displayName": "Linear" },
                { "value": "log", "displayName": "Logarithmic" }
              ]
            }
          }
        }
      },
      "plotArea": {
        "displayName": "Plot Area",
        "properties": {
          "backgroundColor": {
            "displayName": "Background Color",
            "type": { "fill": { "solid": { "color": true } } }
          },
          "showGridLines": {
            "displayName": "Show Grid Lines",
            "type": { "bool": true }
          }
        }
      },
      "labelSettings": {
        "displayName": "Label Settings",
        "properties": {
          "fontSize": {
            "displayName": "Font Size",
            "type": { "numeric": true }
          },
          "fontFamily": {
            "displayName": "Font Family",
            "type": { "text": true }
          }
        }
      },
      "legend": {
        "displayName": "Legend",
        "properties": {
          "showLegend": {
            "displayName": "Show Legend",
            "type": { "bool": true }
          },
          "legendPosition": {
            "displayName": "Legend Position",
            "type": {
              "enumeration": [
                { "value": "Top", "displayName": "Top" },
                { "value": "Bottom", "displayName": "Bottom" },
                { "value": "Left", "displayName": "Left" },
                { "value": "Right", "displayName": "Right" }
              ]
            }
          }
        }
      },
      "tooltip": {
        "displayName": "Tooltip",
        "properties": {
          "showTooltip": {
            "displayName": "Show Tooltip",
            "type": { "bool": true }
          }
        }
      }
    },
    "supportsHighlight": true,
    "sorting": {
      "default": {}
    },
    "drilldown": {
      "roles": ["category"]
    },
    "privileges": []
  }
  